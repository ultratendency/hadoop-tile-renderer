<configuration>
  <property>
    <name>hbase.rootdir</name>
    <value>/hbase</value>
  </property>
  <property>
    <name>hbase.cluster.distributed</name>
    <value>true</value>
  </property>
  <property>
    <name>hbase.zookeeper.quorum</name>
    <value>zookeeper0.safecast.f4.internal.cloudapp.net,zookeeper1.safecast.f4.internal.cloudapp.net,zookeeper2.safecast.f4.internal.cloudapp.net</value>
  </property>

  <property>
    <name>hbase.log.dir</name>
    <value>C:\apps\dist\hbase-0.98.0.2.1.6.0-2103-hadoop2\logs</value>
  </property>

  <property>
    <name>hbase.master.distributed.log.splitting</name>
    <value>true</value>
  </property>

  <property>
    <name>hbase.rest.port</name>
    <value>8090</value>
  </property>

  <property>
    <name>hbase.zookeeper.property.clientPort</name>
    <value>2181</value>
  </property>

  <property>
    <name>hbase.defaults.for.version.skip</name>
    <value>true</value>
  </property>

  <property>
    <name>hfile.index.block.max.size</name>
    <value>131072</value>
  </property>

  <property>
    <name>hbase.regionserver.wal.codec</name>
    <value>org.apache.hadoop.hbase.regionserver.wal.IndexedWALEditCodec</value>
  </property>

  <property>
    <name>io.storefile.bloom.block.size</name>
    <value>131072</value>
  </property>

  <property>
    <name>dfs.support.append</name>
    <value>false</value>
  </property>
</configuration>
